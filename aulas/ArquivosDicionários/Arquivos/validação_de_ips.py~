#validação de ips no arquivo 'ips'
def ip_ok(ip):
	ip = (ip.rstrip()).split('.')
	for value in ip:
		if int(value) > 255:
			return False
		return True
ips = open('ips')
ip_check = open('ip_válidos', 'w')
ip_mismatch = open('ip_inválidos', 'w')
for linha in ips.readlines():
	for ip in linha:
		if ip_ok(ip):
			ip_check.write(ip)
		else:
			ip_mismatch.write(ip)
ips.close()
ip_check()
ip_mismatch()